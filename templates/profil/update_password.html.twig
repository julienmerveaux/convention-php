{% extends 'base.html.twig' %}

{% block title %}Modifi√© le profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" action="{{ path('edit_profil') }}">
                    {{ form_start(form) }}
                    <div class="row">
                        <div>
                            <h5 class="card-subtitle mb-2 text-muted">Change Password</h5>
                            {{ form_row(form.password.first, {'attr': {'class': 'form-control mb-3', 'placeholder': 'New Password'}}) }}
                            {{ form_row(form.password.second, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Confirm Password'}}) }}
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="{{ path('profil_user') }}" class="btn btn-secondary">Cancel</a>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
