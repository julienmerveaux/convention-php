{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="my-4">Créer un événement</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.datetime) }}
            {{ form_widget(form.datetime, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.capacity) }}
            {{ form_widget(form.capacity, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.is_public) }}
            {{ form_widget(form.is_public) }}
        </div>
        <button type="submit" class="btn btn-primary">{{ form_widget(form.save) }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}
